<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="368.0" prefWidth="573.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.grocerystoresimulator.LoginController">
    <children>
        <Button layoutX="182.0" layoutY="278.0" mnemonicParsing="false" onAction="#onLoginBtnClick" prefHeight="33.0" prefWidth="90.0" text="Log In">
            <font>
                <Font name="Bauhaus 93" size="18.0" />
            </font>
        </Button>
        <Label fx:id="loginError" layoutX="149.0" layoutY="118.0" prefHeight="34.0" prefWidth="274.0" text="Wrong username or password. Enter again." textFill="#d10a0a" textOverrun="CENTER_ELLIPSIS" visible="false">
            <font>
                <Font name="Agency FB" size="19.0" />
            </font>
        </Label>
        <Label layoutX="68.0" layoutY="172.0" text="USERNAME :">
            <font>
                <Font name="Arial Rounded MT Bold" size="18.0" />
            </font>
        </Label>
        <Label layoutX="67.0" layoutY="216.0" text="PASSWORD :">
            <font>
                <Font name="Arial Rounded MT Bold" size="18.0" />
            </font>
        </Label>
        <TextField fx:id="userName" layoutX="183.0" layoutY="169.0" prefHeight="26.0" prefWidth="345.0" promptText="Enter Username">
            <font>
                <Font size="15.0" />
            </font>
        </TextField>
        <PasswordField fx:id="userPassword" layoutX="184.0" layoutY="214.0" prefHeight="31.0" prefWidth="346.0" promptText="Enter Password">
            <font>
                <Font size="15.0" />
            </font>
        </PasswordField>
        <Label layoutX="137.0" layoutY="69.0" prefHeight="34.0" prefWidth="300.0" text="Grocery Store Simulator" textOverrun="CENTER_ELLIPSIS">
            <font>
                <Font name="Arial Black" size="22.0" />
            </font>
        </Label>
        <Button layoutX="367.0" layoutY="278.0" mnemonicParsing="false" onAction="#onExitBtnClick" prefHeight="33.0" prefWidth="90.0" text="Exit">
            <font>
                <Font name="Bauhaus 93" size="18.0" />
            </font>
        </Button>

    </children>
</AnchorPane>